{
    "name": "typescript-start-kit",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "git@github.com-PracticeEveryday:PracticeEveryday/typescript-start-kit.git",
    "license": "MIT",
    "scripts": {
        "prepare": "husky install",
        "lint-fix": "eslint '**/*.{ts,tsx}' --ext .ts,.tsx --fix",
        "build": "rm -rf dist && npx tsc --project tsconfig.json",
        "start:dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/bin/index.ts",
        "start:prod": "yarn run build && cross-env NODE_ENV=production node ./dist/bin/index.js"
    },
    "dependencies": {
        "@types/cors": "^2.8.13",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "express": "^4.18.2",
        "helmet": "^6.0.1",
        "morgan": "^1.10.0",
        "nodemon": "^2.0.21",
        "typescript": "^4.9.5"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.14.6",
        "dotenv": "^16.0.3",
        "husky": "^8.0.3",
        "ts-node": "^10.9.1"
    }
}
